<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="GWTestSuite-HTTPCompliance" parallel="false">

    <listeners>
        <listener class-name="org.wso2.carbon.gateway.httpcompliance.tests.internal.GWTestSuiteListener"/>
    </listeners>

    <test name="HTTP1xx-Tests" preserve-order="true" verbose="2">
        <classes>
            <class name="org.wso2.carbon.gateway.httpcompliance.tests.responses.informational.HTTP100ComplianceTest"/>
            <!--<class name="org.wso2.carbon.gateway.httpcompliance.tests.responses.informational.HTTP101ComplianceTest"/>-->
        </classes>
    </test>

    <test name="HTTP2xx-Tests" preserve-order="true" verbose="2">
        <classes>
            <class name="org.wso2.carbon.gateway.httpcompliance.tests.responses.successful.HTTP200ComplianceTest"/>
            <class name="org.wso2.carbon.gateway.httpcompliance.tests.responses.successful.HTTP201ComplianceTest"/>
            <class name="org.wso2.carbon.gateway.httpcompliance.tests.responses.successful.HTTP202ComplianceTest"/>
            <class name="org.wso2.carbon.gateway.httpcompliance.tests.responses.successful.HTTP203ComplianceTest"/>
            <class name="org.wso2.carbon.gateway.httpcompliance.tests.responses.successful.HTTP204ComplianceTest"/>
            <class name="org.wso2.carbon.gateway.httpcompliance.tests.responses.successful.HTTP205ComplianceTest"/>
            <class name="org.wso2.carbon.gateway.httpcompliance.tests.responses.successful.HTTP206ComplianceTest"/>
        </classes>
    </test>

    <test name="HTTP3xx-Tests" preserve-order="true" verbose="2">
        <classes>
            <class name="org.wso2.carbon.gateway.httpcompliance.tests.responses.redirection.HTTP300ComplianceTest"/>
