            <class name="org.wso2.carbon.gateway.httpcompliance.tests.responses.redirection.HTTP304ComplianceTest"/>
            <!--<class name="org.wso2.carbon.gateway.httpcompliance.tests.responses.redirection.HTTP305ComplianceTest"/>-->
            <class name="org.wso2.carbon.gateway.httpcompliance.tests.responses.redirection.HTTP307ComplianceTest"/>
        </classes>
    </test>

    <test name="HTTP4xx-Tests" preserve-order="true" verbose="2">
        <classes>
            <class name="org.wso2.carbon.gateway.httpcompliance.tests.responses.clienterror.HTTP400ComplianceTest"/>
            <class name="org.wso2.carbon.gateway.httpcompliance.tests.responses.clienterror.HTTP401ComplianceTest"/>
