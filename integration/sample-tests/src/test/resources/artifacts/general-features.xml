<routes xmlns="http://camel.apache.org/schema/spring">
    <route id="simple_passthrough">
        <from uri="wso2-gw:/simple_passthrough"/>
        <to uri="wso2-gw:http://localhost:9773/services/HelloService"/>
    </route>

    <route id="http_headerbased">
        <from uri="wso2-gw:/http_headerbased"/>
        <choice>
            <when>
                <simple>${header.routeId} regex 'ep1'</simple>
                <to uri="wso2-gw:http://localhost:9773/services/headerservice1"/>
            </when>
            <when>
                <simple>${header.routeId} regex 'ep2'</simple>
                <to uri="wso2-gw:http://localhost:9773/services/headerservice2"/>
            </when>
            <when>
                <simple>${header.routeId} == 'ep3'</simple>
                <to uri="wso2-gw:http://localhost:9773/services/headerservice4"/>
            </when>
            <when>
                <simple>${header.routeId} regex 'ep4\d' &amp;&amp; ${header.routeId} != 'ep45'</simple>
                <to uri="wso2-gw:http://localhost:9773/services/headerservice5"/>
            </when>
            <otherwise>
                <to uri="wso2-gw:http://localhost:9773/services/headerservice3"/>
            </otherwise>
        </choice>
    </route>

    <route id="loadbalanced">
        <from uri="wso2-gw:/loadbalanced"/>
        <loadBalance>
            <roundRobin/>
            <to uri="wso2-gw:http://localhost:9773/services/loadbalanced1"/>
            <to uri="wso2-gw:http://localhost:9783/services/loadbalanced2"/>
            <to uri="wso2-gw:http://localhost:9793/services/loadbalanced3"/>

        </loadBalance>
    </route>

    <route id="failover_with_lb">
        <from uri="wso2-gw:/failover_with_lb"/>
        <loadBalance inheritErrorHandler="false">
            <failover roundRobin="true"/>
            <to uri="wso2-gw:http://localhost:9773/services/failover1"/>
            <to uri="wso2-gw:http://localhost:9873/services/failover2"/>
            <to uri="wso2-gw:http://localhost:9973/services/failover3"/>
        </loadBalance>
    </route>

    <route id="failover_without_lb">
        <from uri="wso2-gw:/failover_without_lb"/>
        <loadBalance inheritErrorHandler="false">
            <failover roundRobin="false"/>
            <to uri="wso2-gw:http://localhost:8773/services/failover2"/>
            <to uri="wso2-gw:http://localhost:7773/services/failover3"/>
            <to uri="wso2-gw:http://localhost:9773/services/failover1"/>
        </loadBalance>
    </route>

</routes>
